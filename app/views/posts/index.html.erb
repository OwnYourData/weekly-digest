<p id="notice"><%= notice %></p>

<h1>Posts</h1>

<table>
  <thead>
    <tr>
      <th>Weekly</th>
      <th>User</th>
      <th>Post date</th>
      <th>Title</th>
      <th>Url</th>
      <th>Media url</th>
      <th>Media type</th>
      <th>Description</th>
      <th>Category</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.weekly_id %></td>
        <td><%= post.user_id %></td>
        <td><%= post.post_date %></td>
        <td><%= post.title %></td>
        <td><%= post.url %></td>
        <td><%= post.media_url %></td>
        <td><%= post.media_type %></td>
        <td><%= post.description %></td>
        <td><%= post.category %></td>
        <td><%= post.status %></td>
        <td><%= link_to 'Show', post %></td>
        <td><%= link_to 'Edit', edit_post_path(post) %></td>
        <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Post', new_post_path %>
