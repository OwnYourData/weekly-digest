<div class="info-elements">
	<div class="post-title">
		<div class="post-user" style="color: #42B58C; font-weight: 600;"><a href="/user/<%= post2.user_id.to_s + view_mode %>" style="color: inherit; font-size: smaller;"><%= User.find(post2.user_id).name %></a></div>
		<div class="post-date" style="font-size: smaller;">
			<% if controller_name == "news" %>
				<%= post2.post_date.to_s %>
			<% else %>
				<a href="/weekly/<%= Weekly.find(post2.weekly_id).release.to_s + view_mode %>" style="color: inherit;">
					<%= post2.post_date.to_s %></a>
			<% end %>
		</div>
		<a class="<%= post2.media_type %>" href="<%= post2.media_url %>" target="_blank" title="show on MyData Slack"> </a>
	</div>
	<div class="post-text">
		<%= Redcarpet::Markdown.new(Redcarpet::Render::HTML, autolink: true).render(post2.description.to_s).html_safe %>
	</div>
</div>